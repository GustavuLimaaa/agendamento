        transform: translateY(-50px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-lg);
}

.modal-close {
    background: none;
    border: none;
    color: var(--text-secondary);
    font-size: 1.5rem;
    cursor: pointer;
    transition: color var(--transition-fast);
}

.modal-close:hover {
    color: var(--text-primary);
}

/* ============================================
   HELP VIEW STYLES
   ============================================ */
.help-container {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-md);
}

.help-section {
    margin-bottom: var(--spacing-md);
    border: 1px solid #e0e6ed;
    border-radius: var(--border-radius-md);
    overflow: hidden;
    background: white;
    box-shadow: var(--shadow-sm);
}

.help-accordion {
    width: 100%;
    padding: var(--spacing-md);
    background: #f8f9fa;
    border: none;
    text-align: left;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.2s ease;
}

.help-accordion:hover {
    background: #e9ecef;
}

.help-accordion::after {
    content: '▼';
    font-size: 0.8rem;
    transition: transform 0.3s ease;
}

.help-accordion.active::after {
    transform: rotate(180deg);
}

.help-panel {
    display: none;
    padding: var(--spacing-lg);
    background: white;
    border-top: 1px solid #e0e6ed;
    animation: slideDown 0.3s ease;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.help-step {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    align-items: flex-start;
}

.step-number {
    background: var(--primary-color);
    color: white;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.9rem;
    flex-shrink: 0;
}

.help-tip {
    background: #fff3cd;
    border-left: 4px solid #ffc107;
    padding: var(--spacing-md);
    border-radius: 4px;
    margin-top: var(--spacing-md);
    font-size: 0.95rem;
}

.help-example {
    background: #f8f9fa;
    border: 1px dashed #dee2e6;
    padding: var(--spacing-md);
    border-radius: var(--border-radius-md);
    margin: var(--spacing-md) 0;
}

/* ============================================
   ACTION MENU STYLES (IMPROVED)
   ============================================ */
.action-menu-btn {
    background: transparent;
    border: none;
    font-size: 1.5rem;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 0 0.5rem;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.action-menu-btn:hover {
    background: rgba(0, 0, 0, 0.05);
    color: var(--text-primary);
}

.action-menu {
    position: absolute;
    right: 0;
    top: 100%;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: var(--border-radius-md);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    padding: 0.5rem;
    z-index: 100;
    min-width: 150px;
    display: none;
    flex-direction: column;
    gap: 2px;
    animation: menuFadeIn 0.2s ease;
}

.action-menu.active {
    display: flex;
}

@keyframes menuFadeIn {
    from {
        opacity: 0;
        transform: translateY(-5px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.action-menu button {
    background: none;
    border: none;
    padding: 0.6rem 1rem;
    text-align: left;
    width: 100%;
    cursor: pointer;
    border-radius: 4px;
    color: var(--text-primary);
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: background 0.2s ease;
}

.action-menu button:hover {
    background: var(--bg-hover);
    color: var(--primary-color);
}

.action-menu button.delete-btn:hover {
    background: #fee2e2;
    color: #dc2626;
}